{
  "name": "@lit-app/state",
  "description": "state management for lit-app",
  "repository": "https://github.com/lit-app/state",
  "homepage": "https://lit-shape-state.netlify.app/",
  "version": "0.1.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "authors": [
    "christophe.geiser <christophe@preignition.org>"
  ],
  "keywords": [
    "lit",
    "vitejs",
    "web-components"
  ],
  "license": "MIT",
  "main": "src/index",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "ts": "tsc",
    "copy-to-public": "cp -f package.json public/package.json && cp -f README.md public/README.md && mkdir -p public/docs && cp -rf docs/* public/docs ",
    "build": "npm run ts && npm run analyze && npm run copy-to-public ",
    "preview": "vite preview",
    "test": "vitest",
    "analyze-json": "cem analyze",
    "analyze-md": "node custom-elements-to-md.mjs",
    "analyze": "npm run analyze-md && npm run analyze-json && npm run copy-to-public",
    "lint": "eslint 'src/**/*.js'",
    "format": "prettier \"src/**/*.{cjs,html,js,json,md,ts}\" --ignore-path ./.eslintignore --write",
    "prepublishOnly": "npm run analyze"
  },
  "dependencies": {
    "@lit-labs/context": "^0.1.2",
    "@lit/reactive-element": "^1.3.3",
    "happy-dom": "^6.0.0",
    "lit": "^2.2.3"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.5.7",
    "@custom-elements-manifest/to-markdown": "^0.1.0",
    "@preignition/preignition-demo": "^0.5.0",
    "chai-a11y-axe": "^1.4.0",
    "eslint": "^8.14.0",
    "firebase": "^9.8.4",
    "router-slot": "^1.5.5",
    "typescript": "^4.7.2",
    "vite": "^2.9.8",
    "vitest": "^0.13.1"
  },
  "customElements": "docs/custom-elements.json",
  "litApp": {
    "name": "@lit-shape/apt-state",
    "description": "apt-state kit for building an application on lit-shape infrastructure",
    "firestore": "firestore.json",
    "schemas": "schemas.json"
  }
}
